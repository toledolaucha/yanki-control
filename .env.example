# App
NODE_ENV=production
PORT=3000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-a-long-random-secret

# Database (Supabase / Vercel PostgreSQL)
# Usa el pooler de conexión (puerto 6543) para la app
DATABASE_URL="postgres://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1"
# Usa conexión directa (puerto 5432) para migraciones (Prisma)
DIRECT_URL="postgres://postgres.[YOUR-PROJECT-REF]:[YOUR-PASSWORD]@db.supabase.com:5432/postgres"
